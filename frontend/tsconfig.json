{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"]
    },

    "types": ["node", "vite/client"],

    /* üöÄ FIX CR√çTICO: evita que se generen .js en /src */
    "noEmit": true
  },

  "include": [
    "src",
    "src/vite-env.d.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
